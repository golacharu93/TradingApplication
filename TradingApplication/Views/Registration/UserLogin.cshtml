@{

}
@model TradingApplication.Models.UserData;
    <html>
    <body>
        <div class="text-center">

            <h1 class="display-4">User Login</h1>



            <div>

                <form method="post" enctype="multipart/form-data" asp-controller="Registration" asp-action="UserLogin">

                    <table class="table table-bordered">
                        <tr>
                            <td></td>
                            <td>Please Enter Your Login Details:</td>
                        </tr>
                        <tr>
                            <td>User Name</td>
                            <td>
                                @Html.TextBoxFor(model => model.Email, null, new { @class = "form-control", @id = "EmailValue" })
                                @Html.ValidationMessageFor(model => model.Email, null, new { @class = "redcolor" })
                            </td>
                        </tr>

                        <tr>
                            <td>Password</td>

                            <td>
                                @Html.TextBoxFor(model => model.Pwd, null, new { @class = "form-control", @type = "password" })
                                @Html.ValidationMessageFor(model => model.Pwd, null, new { @class = "redcolor" })
                            </td>
                        </tr>

                        <tr>
                            <td>
                            </td>


                        <tr>
                            <td></td>
                            <td style="color:red">
                                <label>@Html.DisplayFor(model => model.LoginErrorMessage)</label>
                                <label> @Html.DisplayFor(model => model.SendMailSuccess)</label>
                                @if (Model.success)
                                {
                                    <p>Your Mail-Id Is Not verified, please verify it.</p>
                                    @Html.ActionLink("Resend Mail", "SendMail", "Registration", new { name = Model.Name, Email = Model.Email });
                                }
                               
                            </td>
                        </tr>

                        <tr>
                            <td></td>
                            <td>
                                <input class="btn-dark" id="Submit" type="submit" value="Log-In" />


                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>  @Html.ActionLink("Register as new User", "UserRegistration", "Registration")</td>

                        </tr>


                    </table>
                </form>
            </div>

        </div>
       
    </body>
</html>