@{
    Layout = null;
}
@model TradingApplication.Models.UserData;
<div class="text-center">

    <h1 class="display-4"></h1>



    <div>

        <form method="post" enctype="multipart/form-data" asp-controller="Registration" asp-action="UserLogin">

            <table class="table table-bordered">
                <tr >
                    <h2 style="color:red">@Html.DisplayFor(model => model.LoginErrorMessage)</h2>                  
                </tr>
                    <tr>
                        <p>Click here for: @Html.ActionLink("Login", "UserLogin", "Registration") </p>
                    </tr>
               
            </table>
        </form>
    </div>

</div>